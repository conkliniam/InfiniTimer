<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfiniTimer.Views.AlternatingTimerView"
             xmlns:local="clr-namespace:InfiniTimer.Common.Components">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1"
                   Text="x"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="End"/>
        <Label Grid.Column="2"
                   Text="{Binding AlternatingTimerSection.Cycles}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Start"/>
        <VerticalStackLayout Grid.Column="0">
            <Label Text="Main"
                   HorizontalTextAlignment="Center"/>
            <local:ViewTimerContent x:Name="mainSection"/>
            <Label Text="Alternate"
                   HorizontalTextAlignment="Center"/>
            <local:ViewTimerContent x:Name="alternateSection"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
