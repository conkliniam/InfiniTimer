<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:InfiniTimer.Common.Components"
             x:Class="InfiniTimer.Views.SequentialTimerView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:EditLabel Text="Timers List" Grid.Row="0"/>
        <StackLayout x:Name="timerListLayout" Grid.Row="1">
        </StackLayout>
        <local:TimerContent x:Name="timerButtons"
                            Grid.Row="2"
                            BackgroundColor="{Binding NextColor}"
                            ButtonsOnly="True"/>
    </Grid>
</ContentView>
