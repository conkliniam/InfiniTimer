<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfiniTimer.Views.AdvancedTimerView"
             xmlns:local="clr-namespace:InfiniTimer.Common.Components">
    <VerticalStackLayout Margin="5">
        <Label 
            Text="{Binding AdvancedTimerModel.Description}"
            FontSize="20"
            VerticalTextAlignment="Start"
            HorizontalTextAlignment="Center"/>
        <BoxView Color="White" HeightRequest="5" Margin="0,5,0,5"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0"
                   Text="Auto Repeat"
                   IsVisible="{Binding AdvancedTimerModel.AutoRepeat}"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            <Label Grid.Column="1"
                   Text="Auto Continue"
                   IsVisible="{Binding AdvancedTimerModel.AutoContinue}"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </Grid>
        <BoxView Color="White" HeightRequest="5" Margin="0,5,0,5"/>
        <local:ViewTimerContent x:Name="viewTimerContent"/>
    </VerticalStackLayout>
</ContentView>
