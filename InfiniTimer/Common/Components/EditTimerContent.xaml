<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfiniTimer.Common.Components.EditTimerContent"
             Margin="5,0" Padding="5,10">
    <VerticalStackLayout Spacing="10" x:Name="timerStack">
        <StackLayout x:Name="buttonContent" Spacing="10">
            <Button Text="Add Timer"
                    Clicked="AddTimerClicked"/>
            <Button x:Name="timerListButton"
                    Text="Add List"
                    Clicked="AddListClicked"/>
        </StackLayout>
        <StackLayout x:Name="timerContent"/>
    </VerticalStackLayout>
</ContentView>
