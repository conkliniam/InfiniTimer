<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfiniTimer.MainPage"
             Title="InfiniTimer Staged Timers">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">
            <Image
                Source="infini_timer.png"
                SemanticProperties.Description="InfiniTimer logo"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to InfiniTimer!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />

            <Label
                Text="Add a Timer to Begin"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to InfiniTimer"
                FontSize="18"
                HorizontalOptions="Center" />

            <ListView>

            </ListView>

            <Button
                x:Name="AddTimerButton"
                Text="Add Timer"
                SemanticProperties.Hint="Navigate to select a Timer"
                Clicked="OnAddTimerClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
